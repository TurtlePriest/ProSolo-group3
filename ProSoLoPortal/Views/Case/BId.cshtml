@model ProSoLoPortal.Models.Case


@{
    ViewData["Title"] = "Bid";
}

<h1>Details</h1>

<div>
    <h4>Case</h4>
    <hr/>
    <div class="col-md-4">
        <form asp-action="Bid">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
