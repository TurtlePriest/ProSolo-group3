@model IEnumerable<ProSoLoPortal.Models.Imagebank>
@using static ProSoLoPortal.Controllers.ImagebankController

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Upload">Create New</a>
</p>

<table class="table" id="ID">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PhotoDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageByte)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PhotoDescription)
                </td>
                <td>
                    <img src="ImagebankController.ConvertByteArrayToBase64(@item.PhotoID)"/>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.PhotoID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.PhotoID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.PhotoID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>