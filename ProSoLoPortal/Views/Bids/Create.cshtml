@model ProSoLoPortal.Models.Bids

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Bids</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-route-isFlexible="@ViewBag.Flexible">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (@ViewBag.Flexible == true)
            {
                <div class="form-group">
                    <label asp-for="ProposedTimeFrame" class="control-label"></label>
                    <input asp-for="ProposedTimeFrame" class="form-control" />
                    <span asp-validation-for="ProposedTimeFrame" class="text-danger"></span>
                </div>
            }
            <div class="form-group">
                <label asp-for="BidPrice" class="control-label"></label>
                <input asp-for="BidPrice" class="form-control" />
                <span asp-validation-for="BidPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="case" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
